{
  "name": "normandy-css",
  "description": "Normandy CSS boilerplate and guidelines",
  "license": "MIT",
  "version": "0.1.0",
  "main": "scss/main.scss",
  "scripts": {
    "prepare": "npm run sass && npm run test",
    "sass": "node_modules/sass/sass.js scss/main.scss output.css",
    "lint": "node_modules/stylelint/bin/stylelint.js scss/**/*.scss --syntax scss",
    "mocha": "node_modules/mocha/bin/mocha --reporter min",
    "test": "npm run lint && npm run mocha"
  },
  "author": "Adrià Fontcuberta <adria@calidae.com> (http://fontcuberta.cat)",
  "contributors": [
    "Xavier Pregona <xevops@gmail.com>",
    "Oriol Ferràndez Grau <oriol@ferrandez.cat> (https://www.ferrandez.cat)"
  ],
  "keywords": [
    "css",
    "sass",
    "scss",
    "bem",
    "itcss",
    "oocss",
    "smacss"
  ],
  "homepage": "https://github.com/calidae/normandy-css",
  "repository": {
    "type": "git",
    "url": "git://github.com/calidae/normandy-css.git"
  },
  "devDependencies": {
    "mocha": "^3.5.3",
    "sass": "^1.1.1",
    "sass-true": "^3.1.0",
    "stylelint": "^9.2.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-scss": "^3.0.0"
  }
